#!/usr/bin/env bash
set -euo pipefail

# Install nvm if not already installed
if [ ! -d "$HOME/.nvm" ]; then
  echo "Installing nvm..."
  curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.40.3/install.sh | bash
  echo "nvm installed successfully"
else
  echo "nvm already installed at $HOME/.nvm"
fi
